  <body>
    <div class="main">
      <%- include('../includes/staff-aside') %>
      <div class="main-content">
        <%- include('../includes/staff-header', { title: 'Add Your Achievement'
        , subTitle: '' }) %>

        <div class="container">
          <div>
            <input type="text" placeholder="Achievement Title" />
          </div>
          <div>
            <input type="text" placeholder="Date of Achievement" />
          </div>
          <div>
            <input
              type="text"
              placeholder="Detail Description of Achievement"
