<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/staff-head', { title : "Apply for Leave"}) %>
    <link rel="stylesheet" href="/styles/staff/employee-leaveapply.css" />
  </head>

  <body>
    <div class="main">
      <%- include('../includes/staff-aside') %>

      <div class="main-content">
        <%- include('../includes/staff-header', { title: 'Apply for leave' ,
        subTitle: '' }) %>
        <div class="container">
          <div>
            <input type="text" placeholder="Leave Title" />
            <input type="text" placeholder="From" />
          </div>
          <div>
            <input type="text" placeholder="Valid Reason for leave" />
            <input type="text" placeholder="To" />
          </div>
          <div>
            <label>Leave type :</label>
            <select>
              <option></option>
              <option>Privilege leave (PL)</option>
              <option>Sick leave (SL)</option>
              <option>Casual leave (CL)</option>
            </select>
          </div>
          <div class="buttonn">
            <button id="Decline">Confirm</button>
            <button id="Approval">Cancel</button>
          </div>
        </div>
        <div class="bottom"></div>
      </div>
    </div>
  </body>
</html>
