<!DOCTYPE html>
<html lang="en">
<head>
        <%- include('../includes/admin-head',{ title : "Create User"})%>
    <link rel="stylesheet" href="/styles/admin/AdminCreateUser.css">
</head>
<body>
    <div class="main">
 <%- include('../includes/admin-aside') %>
      <div class="main-content">
          <%- include('../includes/admin-header', { title: 'Create User' , subTitle: 'Creating a new user profile' }) %>
            <div class="container">
                <form action="/admin/admin-createUser" method="POST" enctype="multipart/form-data">
                    <div class="name-container">
                        <label for="fname">First Name</label>
                        <input type="text" id="fname" placeholder="First Name" name="firstName"><br>
                        <label for="lname" id="laname">Last Name</label>
                        <input type="text" id="lname" placeholder="Second Name"  name="lastName"><br>
                    </div>
                    <label for="phoneNumber">Contact Number</label>
                    <input type="tel" id="phoneNumber" maxlength="10" placeholder=" Phone Number" name="phoneNumber"><br>

<label for="Role" name="role">Select Role</label>
          <select name="role" id="Role"  required>
              <option value="" disabled selected>Select a Role</option>
              <option value="principal">Principal</option>
              <option value="hod">Head Of Department</option>
              <option value="staff">Staff</option>
            </select> <br>

                    <div class="gender">
                        <label for="gender" >Gender:</label>
                        <label for="male">Male</label>
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="female">Female</label>
                        <input type="radio" id="female" name="gender" value="female"><br>
                    </div>

                   <label for="DOB">Date Of Birth</label>
                    <input type="date" name="dateOfBirth" id="DOB"><br>

                    <label for="DOJ">Date of Joining</label>
                    <input type="date" name="dateOfJoining" id="DOJ"><br>

                    <label for="qualification">Qualification</label>
                    <input type="text" name="qualification" id="qualification"><br>

                    <label for="address">Address</label>
                    <input type="text" name="address" id="address"><br>

                    <label for="exp">Experience</label>
                    <input type="number" name="experience" id="exp"><br>
                    
                    <label for="email">EMAIL</label>
                    <input type="email" id="email" placeholder="E-Mail" name="email"><br>
                    
                    <label for="pwd">Password</label>
                    <input type="password" name="password" id="pwd" placeholder="Password"><br>

                    <label for="file">Photo</label>
                    <input type="file" id="file" name="userPhoto"><br><br>

                    <button type="reset" id="belowbtn">Reset</button>
                    <button type="submit" id="belowbtn">Submit</button>
                </form>
            </div >
    </div>
</body>
</html>